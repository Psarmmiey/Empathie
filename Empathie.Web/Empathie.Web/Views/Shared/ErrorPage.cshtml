@{
    ViewBag.Title = "ErrorPage";
}
<!--Page Title-->
<section class="page-title" style="background-image:url(@Url.Content("~/Content/mytemplate/")images/background/bg-page-title-1.jpg);">
    <div class="auto-container">
        <h1>Page Not Found</h1>
        <div class="bread-crumb-outer">
            <ul class="bread-crumb clearfix">
                <li>@Html.ActionLink("Home", "Index")</li>
                <li><a href="#">Pages</a></li>
                <li class="active">404 Page</li>
            </ul>
        </div>
    </div>
</section>
<!--Error Section-->
<section class="error-section">
    <div class="auto-container">
        <figure class="error-image"><img src="@Url.Content("~/Content/mytemplate/")images/resource/404-image.png" alt=""></figure>
        <h3>We can’t find the page you’re looking for</h3>

        <!--btn box-->
        <div class="btn-box">
            <a class="theme-btn btn-style-two" href="index-2.html"><span class="flaticon-home"></span> go to home</a>
        </div>
    </div>
</section>